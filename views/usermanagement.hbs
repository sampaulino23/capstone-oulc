<head>
    <title>Products</title>
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> <!--CHECK -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> <!--CHECK -->
    <script src="/js/tablefilter.js" type="text/javascript"></script>
    
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../css/navstyle.css">
    <link rel="stylesheet" href="../css/inventoryproductsstyle.css">

    <script>
        $(document).ready(function(){
            $(".search-icon").click(function(){
                $(".search-box").toggle();
                $(".search-box input[type='text']").focus();
            });

            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        });

    </script>
</head>

<body>
    <div id="createpost" style ="min-height: 75vh;">
        <div class="tab-content">
            {{!-- <input class="form-control" id="myInput" style="font-size: 18px; width: 30%" type="text" placeholder="Search..." >   --}}
            <div style="text-align: center;"><i id="featured">User Management</i></div>
            <br>
    
            <a href="/admin/adduser">Add User</a>
            
            <br><br>
            <div id="" class="tab-pane active">
                <div class="w-100">
                <table id="table" class="table table-hover" style="width: 100%; font-size: 18px; border-bottom: 1px solid #eee; background:white;">
                    <thead class="thead-light">
                        <tr>
                            <th style="width: 20%; font-size: 20px;" class="text-left">Name</th>
                            <th style="width: 20%; font-size: 20px; padding-right: 10%;" class="text-right">Email</th>
                            <th style="width: 20%; font-size: 20px; padding-left: 5%;" class="text-left">Department</th>
                            <th style="width: 20%; font-size: 20px; padding-left: 5%;" class="text-left">Role</th>
                            <th style="width: 10%; font-size: 20px; padding-right: 10%;" class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
            <!-- ALL USERS -->
                        {{#each users}}
                            <tr onclick="window.location.href='/inventory/sproduct/{{_id}}'" style="cursor: pointer;">
                                <td class="text-left">{{fullName}}</td>
                                <td class="text-right" style="padding-right: 10%;">{{email}}</td>
                                <td class="text-left" style="padding-left: 5%;">{{department}}</td>
                                <td class="text-left" style="padding-left: 5%;">{{role}}</td>
                                <td class="text-right" style="padding-right: 2%;">{{isActive}}</td>
                            </tr>
                        {{/each}}
                      
                    </tbody>
                </table>
                </div> 
            </div>
        </div>
    </div>
</body>