<head>
    <title>Products</title>
    
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script> <!--CHECK -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script> <!--CHECK -->
    <script src="/js/tablefilter.js" type="text/javascript"></script>
    
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/navstyle.css">
    <link rel="stylesheet" href="../css/usermanagement.css">

    <script>
        $(document).ready(function(){
            $(".search-icon").click(function(){
                $(".search-box").toggle();
                $(".search-box input[type='text']").focus();
            });

            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

        });

    </script>
</head>

<body>
    <div id="createpost" style ="min-height: 75vh;">
        <div class="tab-content">
            {{!-- <input class="form-control" id="myInput" style="font-size: 18px; width: 30%" type="text" placeholder="Search..." >   --}}
            <div id = "header">User Management</div>
            <br>
            <a href="/admin/adduser" class="add-user-btn">+ Add User</a>
            <br><br>
            <div id="user-table" class="tab-pane active">
                <div class="w-100">
                <table id="table" class="table table-hover" style="width: 100%; font-size: 16px; background:#D9D9D9;">
                    <thead class="table-headers">
                        <tr>
                            <th style="width: 20%; padding: 23px 20px;" class="text-left">Name</th>
                            <th style="width: 20%; padding: 23px 0px;" class="text-left">Email</th>
                            <th style="width: 20%; padding: 23px 0px;" class="text-left">Department</th>
                            <th style="width: 20%; padding: 23px 0px;" class="text-left">Role</th>
                            <th style="width: 10%; padding: 23px 20px;" class="text-left">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="myTable">
            <!-- ALL USERS -->
                        {{#each users}}
                            <tr onclick="window.location.href='/inventory/sproduct/{{_id}}'" style="cursor: pointer;">
                                <td class="text-left" style = "padding: 23px 20px;">{{fullName}}</td>
                                <td class="text-left" style="padding: 23px 0px;">{{email}}</td>
                                <td class="text-left" style="padding: 23px 0px;">{{department}}</td>
                                <td class="text-left" style="padding: 23px 0px;">{{role}}</td>
                                <td class="text-left" style="padding: 23px 20px;">{{isActive}}</td>
                            </tr>
                        {{/each}}
                      
                    </tbody>
                </table>
                </div> 
            </div>
        </div>
    </div>
</body>