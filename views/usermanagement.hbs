<body>
    <div id="createpost" style="min-height: 75vh;">
        <div class="tab-content">


            <div id="header">User Management</div>

            

            <ul class="nav-tabs" id="myTab" role="tablist">
                <button autofocus class="nav-item" id="all-tab" data-toggle="tab" href="#all" role="tab"
                    aria-controls="all" value="" onclick="viewAll()">
                    All Users
                </button>
                <button class="nav-item" id="activeusers-tab" data-toggle="tab" href="#activeusers" role="tab"
                    aria-controls="activeusers" value="true" onclick="viewActive()">
                    Active Users
                </button>
                <button class="nav-item" id="inactiveusers-tab" data-toggle="tab" href="#inactiveusers" role="tab"
                    aria-controls="inactiveusers" value="false" onclick="viewInactive()">
                    Inactive Users
                </button>
            </ul>


            <!--
            <ul id = "" >
                <li ><a href="/admin/usermanagement" class = "" id = "active" style="color: black;">All</a></li>
                <li ><a href="/admin/active" class = "" id = "active" style="color: black;">Active</a></li>
                <li><a href="/admin/inactive" class = "" id = "inactive" style="color: black;">Inactive</a></li>
            </ul>-->
            
            <div id="add-user-search">
                <a href="/admin/adduser" class="add-user-btn">+ Add User</a>
                <input class="form-control" id="myInput" type="text" placeholder="Search...">
            </div>

            

            <div id="dropdowns">
                <label for="" class="dept-and-role">Department</label>
                <select id="departmentdropdown" oninput="filterUserDepartment();" onChange="resetRole();">
                    <option selected disabled value="a">Select Department </option>
                    <option value="All">All</option>
                    {{#each departments}}
                    <option value="{{abbrev}}">{{abbrev}}</option>
                    {{/each}}
                </select>

                <label for="" class="dept-and-role" style="margin-left: 20px;">Role</label>
                <select id="roledropdown" oninput="filterUserRole();" onChange="resetDepartment();">
                    <option selected disabled value="a">Select Role </option>
                    <option value="All">All</option>
                    {{#each roles}}
                    <option value="{{name}}">{{name}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="tab-pane active" id="all" role="tabpanel" aria-labelledby="all-tab">
                <div id="user-table" class="tab-pane active">
                    <div class="w-100">
                        <table id="table" class="sortable table table-hover"
                            style="width: 100%; font-size: 16px; background:#D9D9D9;">
                            <thead class="table-headers">
                                <tr>
                                    <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white;">Name</th>
                                    <th style="width: 15%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Email</th>
                                    <th style="width: 25%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Department</th>
                                    <th style="width: 15%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Role</th>
                                    <th class="sorttable_nosort" style="width: 10%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white; cursor: default;">Actions</th>

                                        <!-- COMMENT THIS OUT IF YOU'RE DONE CHECKING USER STATUS !-->
                                    <th class="sorttable_nosort" style="width: 15%; padding: 15px; 15px; text-align: left; cursor: default; display:none;">Status</th>
                                        <!-- COMMENT THIS OUT IF YOU'RE DONE CHECKING USER STATUS !-->
                                </tr>
                            </thead>
                            <tbody id="myTable">
                                <!-- ALL USERS -->
                                {{#each users}}
                                
                                {{!-- <div id = "nav-viewUsers-start"> {{#compare isActive '==' true}}  </div>    --}}

                                <tr style="cursor: pointer;"  id="{{_id}}">
                                    <td data-toggle="modal" data-target="#modalUserView{{@index}}" class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white;" id="user-name" value="{{_id}}">{{fullName}}</td>
                                    <td data-toggle="modal" data-target="#modalUserView{{@index}}" class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{email}}</td>
                                    <td data-toggle="modal" data-target="#modalUserView{{@index}}" class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{department.abbrev}}</td>
                                    <td data-toggle="modal" data-target="#modalUserView{{@index}}" class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{role.name}}</td>
                                    <td class="text-left"
                                        style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">
                                        <div id="actions">
                                            <div class="dropstart">
                                                <i class="bi bi-three-dots-vertical" data-bs-toggle="dropdown"
                                                    aria-expanded="false"></i>
                                                <ul class="dropdown-menu">
                                                    <li><button class="dropdown-item get-edit-user" type="button"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#modalEditUserDetails{{@index}}">Edit</button>
                                                    </li>
                                                    <li><button class="dropdown-item get-reset-password" type="button"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#modalResetPassword{{@index}}">Reset
                                                            Password</button></li>
                                                </ul>
                                            </div>

                                            {{#if isActive}}
                                            <!--
                                            <button type="submit" id="{{_id}}" class="useraccess" data-toggle="modal"
                                                data-target="#modalUserAccess{{@index}}">Disable</button>
                                            <br>
                                            -->
                                            
                                            
                                            <!-- Default switch -->
                                            <div class="form-check form-switch" data-toggle="modal" id="{{_id}}" data-target="#modalUserAccess{{@index}}">
                                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked />
                                            </div>

                                            {{else}}
                                            <!--
                                            <button type="submit" id="{{_id}}" class="useraccess" data-toggle="modal"
                                                data-target="#modalUserAccess{{@index}}">Enable</button>
                                            <br>
                                            -->
                                            

                                            <!-- Default switch -->
                                            <div class="form-check form-switch" data-toggle="modal" id="{{_id}}" data-target="#modalUserAccess{{@index}}">
                                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault"/>
                                            </div>

                                            {{/if}}
                                        </div>

                                        <!-- EDIT USER DETAILS MODAL -->
                                        <div class="modal fade" id="modalEditUserDetails{{@index}}" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Edit User Account
                                                        </h5>
                                                    </div>
                                                    <form action="/admin/edituser" method="POST">
                                                        <div class="modal-body-view-user-details">
                                                            <input type="hidden" class="form-control" value="{{_id}}"
                                                                name="edituserdetailsid">
                                                            <div class="mb-3">
                                                                <label for="fullname" class="form-label">Full
                                                                    Name</label>
                                                                <input type="text" class="form-control"
                                                                    id="editFullName" name="editFullName"
                                                                    placeholder="Enter full name" style="width: 60%;"
                                                                    value="{{fullName}}" required>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="fulladdress" class="form-label">Email
                                                                    Address</label>
                                                                <input type="text" class="form-control"
                                                                    id="editEmailAddress" name="editEmailAddress"
                                                                    placeholder="Enter full address" style="width: 60%;"
                                                                    value="{{email}}" readonly>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="department"
                                                                    class="form-label">Department</label>
                                                                <select id="editDepartment"
                                                                    name="editDepartment" style="width: 60%;"
                                                                    class="form-select" required>
                                                                    {{#each ../departments}}
                                                                    {{#compare abbrev "==" ../department.abbrev}}
                                                                        <option value="{{abbrev}}" selected>{{abbrev}}</option>
                                                                    {{else}}
                                                                        <option value="{{abbrev}}">{{abbrev}}</option>
                                                                    {{/compare}}
                                                                    {{/each}}
                                                                </select>
                                                            </div>
                                                            <div class="mb-3">
                                                                <label for="role" class="form-label">Role</label>
                                                                <select id="editRole" name="editRole"
                                                                    style="width: 60%;" class="form-select" required>
                                                                    {{#each ../roles}}
                                                                    {{#compare name "==" ../role.name}}
                                                                        <option value="{{name}}" selected>{{name}}</option>
                                                                    {{else}}
                                                                        <option value="{{name}}">{{name}}</option>
                                                                    {{/compare}}
                                                                    {{/each}}
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="close-btn"
                                                                data-bs-dismiss="modal">CLOSE</button>
                                                            <button type="submit" class="confirm-btn">SAVE</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- END: EDIT USER DETAILS MODAL -->

                                        <!-- RESET PASSWORD MODAL -->
                                        <div class="modal fade" id="modalResetPassword{{@index}}" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Reset User
                                                            Account Password</h5>
                                                    </div>
                                                    <form action="/admin/resetpassword" method="POST">
                                                        <input type="hidden" class="form-control" id="resetPasswordUserId" name="userid" value="{{_id}}">
                                                        <div class="modal-body">
                                                            Are you sure you want to reset the user password? ({{fullName}})
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" class="confirm-btn">Yes</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                        <!--  END: RESET PASSWORD MODAL -->

                                    </td>
                                    <!-- COMMENT THIS OUT IF YOU'RE DONE CHECKING USER STATUS !-->
                                    <td data-toggle="modal" data-target="#modalUserView{{@index}}" class="text-left"
                                        style="padding: 23px 20px; display:none;">{{isActive}}</td>
                                    <!-- COMMENT THIS OUT IF YOU'RE DONE CHECKING USER STATUS !-->
                                </tr>

                                <!--  USER VIEW MODAL -->

                                <div class="modal fade" id="modalUserView{{@index}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document"
                                        style="width: 30%">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">View User Account
                                                </h5>
                                            </div>

                                            <div class="modal-body-view-user-details">
                                                <b>Name</b><br>
                                                {{fullName}} <br><br>
                                                <b>Email Address</b><br>
                                                {{email}} <br><br>
                                                <b>Department</b><br>
                                                {{department.name}} ({{department.abbrev}}) <br><br>
                                                <b>Role</b><br>
                                                {{role.name}} <br><br>
                                                {{#if isDefaultPass}}
                                                <b>Default Password</b><br>
                                                {{password}}
                                                {{else}}
                                                {{/if}}
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="close-btn" id="enable-close"
                                                    onclick="setRequired()" data-dismiss="modal">CLOSE</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--  END: USER VIEW MODAL -->


                                <!--  USER ACCESS MODAL -->

                                <div class="modal fade" id="modalUserAccess{{@index}}" tabindex="-1" role="dialog"
                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered modal-lg" role="document"
                                        style="width: 35%;">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">User Account Access
                                                </h5>
                                            </div>
                                            <form id="limitform" class="limitform" action="/setqtylimit" method="POST">


                                                <div class="modal-body">
                                                    {{#if isActive}}
                                                    Are you sure you want to disable this user account?
                                                    <!-- DISABLE MODAL -->
                                                    {{else}}
                                                    Are you sure you want to enable this user account?
                                                    <!-- ENABLE MODAL -->
                                                    {{/if}}
                                                    <br>
                                                    ({{fullName}})
                                                </div>

                                                <div class="modal-footer">
                                                    <button type="button" class="close-btn cancel-useraccess" id="enable-close"
                                                        onclick="setRequired()" data-dismiss="modal">CANCEL</button>
                                                    {{#if isActive}}
                                                    <!-- DISABLE FUNCTION -->
                                                    <button type="button" class="confirm-btn disable-useraccess"
                                                        data-toggle="modal" data-target="#" data-dismiss=" modal"
                                                        id="{{_id}}">OK</button>

                                                    {{else}}
                                                    <!-- ENABLE FUNCTION -->
                                                    <button type="button" class="confirm-btn enable-useraccess"
                                                        data-toggle="modal" data-target="#" data-dismiss=" modal"
                                                        id="{{_id}}">OK</button>

                                                    {{/if}}

                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <!--  END: USER ACCESS MODAL -->
                                
                                {{!-- <div id = "nav-viewUsers-end">{{/compare}}</div> --}}
                                
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!--
            <div class="tab-pane fade" id="activeusers" role="tabpanel" aria-labelledby="activeusers-tab">

                active users

            </div>

            <div class="tab-pane fade" id="inactiveusers" role="tabpanel" aria-labelledby="inactiveusers-tab">
                inactive users

            </div>
            -->
        </div>
    </div>

    <!-- NEWLY ADDED USER TOAST -->
    <div class="toast-container" style="position: absolute; top: 10px; right: 10px;">
        <div class="toast" id="add-user-toast">
            <div class="toast-header">
                <p id="newly-added-user-id" hidden>{{newlyAddedUser._id}}</p>
                <strong class="me-auto"><i class="bell-fill"></i> New User</strong>
                <small>Just now</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
            </div>
            <div class="toast-body">
                User {{newlyAddedUser.fullName}} has been added.
            </div>
        </div>
    </div>
</body>