<!DOCTYPE html>

<html>
    <head>
        <title>Add User</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="/js/oulctablefilter.js" type="text/javascript"></script>
        <link rel="stylesheet" href="/css/templatesoulcstyle.css">
    </head>
    <body>
        <div id="header">Contract Repository</div>

        <div id = "template-bar" class="">
            <div class="">
                <input class="form-control" id="myInput" onkeyup="searchTemplateTable()" type="text" placeholder="Search...">
            </div>
            <div class="">
                <button class="full-size-btn" data-bs-toggle="modal" data-bs-target="#view-full-size-modal">View Full Size</button>
            </div>
        </div>

        <div class="container">
            <div class="row"> 
                <!-- LEFT SIDE -->
                <div class="col-4">
            
                </div>

                <!-- RIGHT SIDE -->
                
                <div class="col-8" id="repositoryView">
                    <div class="tab-pane active" id="all" role="tabpanel" aria-labelledby="all-tab">
                        <div id="user-table" class="tab-pane active">
                            <div class="w-100">
                                <table id="table" class="sortable table table-hover"
                                    style="width: 100%; font-size: 16px; background:#D9D9D9;">
                                    <thead class="table-headers">
                                        <tr>
                                            <th style="width: 30%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: none;">Name</th>
                                            <th style="width: 30%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Type</th>
                                            <th style="width: 30%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Upload Date</th>
                                            <th style="width: 10%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody id="myRepositoryTable">
                                        {{#each repository}}
                                        <tr style="cursor: pointer;" id="{{_id}}" onclick="window.location.href='/staff/viewFile/{{_id}}'">
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: none;">{{name}}</td>
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white;">{{requestid.contractType.name}}</td>
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white;">{{formatdate uploadDate}}</td>
                                            <td id = "" class="action-cell text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white; cursor: default;">
                                                <div id="actions">
                                                    <div class="dropstart">
                                                        <i class="bi bi-three-dots-vertical" data-bs-toggle="dropdown"
                                                        aria-expanded="false" style ="cursor: pointer;"></i>
                                                        <i class="bi bi-trash" data-bs-toggle="modal" data-bs-target="#deleteContractModal{{@index}}" style ="cursor: pointer;"></i>
                                                        <ul class="dropdown-menu">
                                                            <li><button class="dropdown-item get-edit-user" type="button"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#replaceTemplateModal{{@index}}">Replace</button>
                                                            </li>
                                                            <li>
                                                                {{#if isWordFile}}
                                                                <a target="_blank" href="/staff/downloadtemplate/{{wordFileName}}" class="dropdown-item download-template text-body">Download .DOC File</a>
                                                                {{else}}
                                                                <a target="_blank" href="/staff/downloadtemplate/{{pdfFileName}}" class="dropdown-item download-template text-body">Download .PDF File</a>
                                                                {{/if}}
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Replace Template Modal -->
                                        <div class="modal fade" id="replaceTemplateModal{{@index}}" tabindex="-1" aria-labelledby="replaceTemplateModal{{@index}}" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Replace Template</h5>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="custom-file">
                                                            <form action="/staff/replacetemplate" method="POST" enctype="multipart/form-data">
                                                            <div class="">
                                                                <input type="hidden" class="form-control" value="{{_id}}" name="replaceTemplate">
                                                                <p>Are you sure you want to replace this file?</p>
                                                                <p class = ""><b>File:</b> {{name}}</p>
                                                                <p class = ""><b>Type:</b> {{type.name}}</p>
                                                                <div class = "border-div"></div><br>
                                                                <label for="file" class="modal-text custom-file-label">File Upload</label>
                                                                <input type="file" name="file" id="replaceFile" class="custom-file-input">
                                                            </div>
                                                            <div class="modal-footer">
                                                                <br>
                                                                <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                                                                <button type="submit" class="upload-btn-modal replace-template" id="confirmReplaceTemplate">Replace</button>
                                                            </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>


                                        <!-- For Legal Review Modal -->
                                        <div class="modal fade" id="deleteContractModal{{@index}}" tabindex="-1" aria-labelledby="deleteContractModal{{@index}}" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Delete Contract</h5>
                                                    </div>
                                                    <div class="modal-body" style = "text-align: center;">
                                                        <div class="">
                                                            <form action="/staff/deleteContract" method="POST">
                                                            <div class="mb-3">
                                                                <input type="hidden" class="form-control" value="{{_id}}" name="deleteContract">
                                                                Are you sure you want to delete this contract"{{name}}"?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="close-btn" data-bs-dismiss="modal">Cancel</button>
                                                                <button type="submit" class="upload-btn-modal deleteTemplate" id="confirmDeleteTemplate">Delete</button>
                                                            </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <!-- Upload Template Modal -->
    <div class="modal fade" id="uploadTemplateModal" tabindex="-1" aria-labelledby="uploadTemplateModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Upload Template</h5>
                </div>
                <form action="/staff/uploadtemplate" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <div class="custom-file mb-3">
                            <label for="text" class="modal-text form-label">Title</label><br>
                            <input type="text" name="title" placeholder="Enter template title" id="title" class="form-control" required><br><br>
                            <label for="file" class="modal-text custom-file-label">File Upload</label><br>
                            <input type="file" name="file" id="file" class="custom-file-input" required><br><br>
                            <label for="contractType" class = "modal-text">Type</label><br>
                            <select name="contractType" id="contractType" class="dropdown" required>
                            {{#each contracttypes}}
                                <option>{{name}}</option>
                            {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="upload-btn-modal">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

 <!-- View Full Size Template Modal -->
    <div class="modal fade modal-xl" id="view-full-size-modal" tabindex="-1" aria-labelledby="view-full-size-modal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">View Full Size Template</h5>
                </div>
                <div class="modal-body">
                    <div id="templateViewFullSize">

                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</html>