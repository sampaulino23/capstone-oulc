<!DOCTYPE html>

<html>
    <head>
        <title>Contract Repository</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="/js/policy.js" type="text/javascript"></script>
        <link rel="stylesheet" href="/css/templatesoulcstyle.css">
    </head>
    <body>
        <div id="header">OULC Policies and Procedures</div>
        <div class="container">
            <div class="row" id="addnewpolicy-bar">
                {{#compare user_role "!=" "Requester"}}
                <div>
                    <button class="upload-btn addnew-btn" data-bs-toggle="modal" data-bs-target="#uploadPolicyModal">+ Upload New File</button>
                </div>
                {{/compare}}
                <div>
                    <input class="form-control" id="searchPolicyInput" type="text" placeholder="Search...">
                </div>
            </div>
        </div>

        <div class="row"> 
                <!-- LEFT SIDE -->
                <div class="col-6">
                    <div class="tab-pane active" id="all" role="tabpanel" aria-labelledby="all-tab">
                        <div id="user-table" class="tab-pane active">
                            <div class="w-100">
                                <table id="table" class="sortable table table-hover"
                                    style="width: 100%; font-size: 16px; background:#D9D9D9;">
                                    <thead class="table-headers">
                                        <tr>
                                            <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: none;">Title</th>
                                            <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Upload Date</th>
                                            <th style="width: 5%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="myPolicyTable" style = "word-break: break-word;">
                                        {{#each policyFiles}}
                                        <tr style="cursor: pointer;" id="{{_id}}" onclick="">
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: none;">{{name}}</td>
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white;">{{formatdate uploadDate}}</td>
                                            <td id = "" class="action-cell text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white; cursor: default;">
                                                <div id="actions">
                                                    <div class="dropstart">
                                                        <i class="bi bi-three-dots-vertical" data-bs-toggle="dropdown" id = "actionDropdown"
                                                        aria-expanded="false" style ="cursor: pointer;"></i>
                                                        <i class="bi bi-trash" data-bs-toggle="modal" data-bs-target="#deleteTemplateModal{{@index}}" style ="cursor: pointer;"></i>
                                                        <ul class="dropdown-menu">
                                                            <li class = "bi-replace"><button class="dropdown-item get-edit-user" type="button"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#replaceTemplateModal{{@index}}">View Revision History</button>
                                                            </li>
                                                            <li class = "bi-replace"><button class="dropdown-item get-edit-user" type="button"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#replaceTemplateModal{{@index}}">Uploade Policy</button>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RIGHT SIDE -->
                <div class="col-6" id="policyView">
                    <div class="d-grip gap-3">
                        <div class="p-2" style = "text-align: center;">
                            <img src="/img/dlsu_logo.png" style = "width: 50%; filter: opacity(30%);">
                        </div><br>
                        <div class="p-2">
                            <p class="p text-center text-body">Click on a policy to view them here.</p>
                        </div>
                    </div>
                </div>
            </div>
    </body>
    
    <!-- Upload Policy Modal -->
    <div class="modal fade" id="uploadPolicyModal" tabindex="-1" aria-labelledby="uploadPolicyModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="w-100 modal-title" id="exampleModalLabel">Upload New Policy</h5>
                    <button type="button" class="header-close-btn" data-bs-dismiss="modal">&times;</button>
                </div>
                <form action="/staff/uploadpolicy" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                            <label for="file" class="modal-text custom-file-label">File Upload</label><br>
                            <input type="file" name="file" id="file" class="custom-file-input" accept="application/pdf" required><br><br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="upload-btn-modal" id="uploadPolicyBtn">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</html>
<script>
    $(document).ready(() => {
        $('.action-cell').click(function(event){
            event.stopPropagation();
        });
    });
</script>