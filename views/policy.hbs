<!DOCTYPE html>

<html>
    <head>
        <title>Contract Repository</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
        <script src="/js/policy.js" type="text/javascript"></script>
        <link rel="stylesheet" href="/css/templatesoulcstyle.css">
    </head>
    <body>
        <div id="header">OULC Policies and Procedures</div>
        <div class="container">
            <div class="row">
                <!-- LEFT SIDE -->
                <div class="col-6">
                    <div class="row" id = "upload-btn-header">
                        {{#compare user_role "!=" "Requester"}}
                        <div class = "col-auto">
                            <button class="upload-btn addnew-btn" data-bs-toggle="modal" data-bs-target="#uploadPolicyModal">+ Upload New File</button>
                        </div>
                        {{/compare}}
                        <div class = "col">
                            <input class="form-control" id="searchPolicyInput" type="text" placeholder="Search...">
                        </div>
                    </div>
                    <div class="tab-pane active" id="all" role="tabpanel" aria-labelledby="all-tab">
                        <div id="user-table" class="tab-pane active">
                            <div class="w-100">
                                <table id="table" class="sortable table table-hover"
                                    style="width: 100%; font-size: 16px; background:#D9D9D9;">
                                    <thead class="table-headers">
                                        <tr>
                                            <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: none;">Title</th>
                                            <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Upload Date</th>
                                            {{#compare user_role '!=' 'Requester'}}
                                            <th style="width: 5%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Actions</th>
                                            {{/compare}}
                                        </tr>
                                    </thead>
                                    <tbody id="myPolicyTable" style = "word-break: break-word;">
                                        {{#each policyVersions}}
                                        <tr style="cursor: pointer;" id="{{_id}}" onclick="">
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: none;">{{filename}}</td>
                                            <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white;">{{formatdate uploadDate}}</td>
                                            {{#compare ../user_role '!=' 'Requester'}}
                                            <td id = "" class="action-cell text-left" style="padding: 15px 15px; border-bottom: 1px solid #9F9F9F; border-left: 1px solid white; cursor: default;">
                                                <div id="actions">
                                                    <div class="dropstart">
                                                        <i class="bi bi-three-dots-vertical" data-bs-toggle="dropdown" id="actionDropdown"
                                                        aria-expanded="false" style ="cursor: pointer;"></i>
                                                        <i class="bi bi-trash" data-bs-toggle="modal" data-bs-target="#deletePolicyModal{{@index}}" style ="cursor: pointer;"></i>
                                                        <ul class="dropdown-menu">
                                                            <li class="bi-replace">
                                                                <a href="/attorney/policyversions/{{policy}}" class="dropdown-item" type="button">View Revision History</a>
                                                            </li>
                                                            <li class="bi-replace"><button class="dropdown-item" type="button"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#updatePolicyModal{{@index}}">Update Policy</button>
                                                            </li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </td>
                                            {{/compare}}
                                        </tr>

                                        <!-- Update Policy Modal -->
                                        <div class="modal fade" id="updatePolicyModal{{@index}}" tabindex="-1" aria-labelledby="updatePolicyModal{{@index}}" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="w-100 modal-title" id="exampleModalLabel">Update Policy</h5>
                                                        <button type="button" class="header-close-btn" data-bs-dismiss="modal">&times;</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="custom-file">
                                                            <form action="/staff/updatepolicy" method="POST" enctype="multipart/form-data">
                                                                <div class="mb-3">
                                                                    <input type="hidden" class="form-control" value="{{_id}}" id="updatePolicyVersion" name="updatePolicyVersion">
                                                                    <input type="hidden" class="form-control" id="updatePolicyUserId" name="updatePolicyUserId" value="{{../user_id}}">

                                                                    <label for="updatePolicyRevisionNotes" class="form-label">Revision Notes</label>
                                                                    <textarea rows="3" class="form-control" id="updatePolicyRevisionNotes" name="updatePolicyRevisionNotes"></textarea>
                                                                    
                                                                    <label for="updatePolicyFile" class="modal-text form-label">File Upload</label>
                                                                    <input type="file" name="updatePolicyFile" id="updatePolicyFile" class="form-control" accept="application/pdf" required>
                                                                </div>
                                                                <div class="modal-footer" style="margin-top: 10px;">
                                                                    <br>
                                                                    <button type="button" class="close-btn" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="upload-btn-modal update-policy" id="confirmUpdatePolicy">Submit</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Delete Policy Modal -->
                                        <div class="modal fade" id="deletePolicyModal{{@index}}" tabindex="-1" aria-labelledby="deletePolicyModal{{@index}}" aria-hidden="true">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="w-100 modal-title" id="exampleModalLabel">Delete File</h5>
                                                        <button type="button" class="header-close-btn" data-bs-dismiss="modal">&times;</button>
                                                    </div>
                                                    <div class="modal-body" style = "text-align: center;">
                                                        <div class="">
                                                            <form action="/staff/deletepolicy" method="POST">
                                                                <div class="mb-3">
                                                                    <input type="hidden" class="form-control" value="{{_id}}" name="deletePolicy">
                                                                    Are you sure you want to delete this file<br>"{{filename}}"?
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button type="button" class="close-btn" data-bs-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="upload-btn-modal delete-policy" id="confirmDeletePolicy">Delete</button>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- RIGHT SIDE -->
                <div class="col-6" id="">
                    <div class="col-auto">
                        <button class="full-size-btn" id="fullSizePolicy" data-bs-toggle="modal" data-bs-target="#view-full-size-modal">View Full Size</button>
                    </div>
                    <div class="" id="policyView">
                        <div class="d-grip gap-3">
                            <div class="p-2" style = "text-align: center;">
                                <img src="/img/dlsu_logo.png" style = "width: 50%; filter: opacity(30%);">
                            </div><br>
                            <div class="p-2">
                                <p class="p text-center text-body">Click on a policy to view them here.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
    
    <!-- Upload Policy Modal -->
    <div class="modal fade" id="uploadPolicyModal" tabindex="-1" aria-labelledby="uploadPolicyModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="w-100 modal-title" id="exampleModalLabel">Upload New Policy</h5>
                    <button type="button" class="header-close-btn" data-bs-dismiss="modal">&times;</button>
                </div>
                <form action="/staff/uploadpolicy" method="POST" enctype="multipart/form-data">
                    <div class="modal-body">
                        <input type="hidden" id="uploadPolicyUser" name="uploadPolicyUser" value="{{user_id}}">
                        <label for="file" class="modal-text custom-file-label">File Upload</label><br>
                        <input type="file" name="file" id="file" class="custom-file-input" accept="application/pdf" required><br><br>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="upload-btn-modal" id="uploadPolicyBtn">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</html>
<script>
    $(document).ready(() => {
        $('.action-cell').click(function(event){
            event.stopPropagation();
        });
    });
</script>