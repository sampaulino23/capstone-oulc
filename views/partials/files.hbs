<script src="/js/specificrequestfiles.js" type="text/javascript"></script>

<div>
    <div class="files-div">
        <div class = "files-header">Documents Attached: </div><br>
        <table id="table" class="sortable table table-hover"
            style="width: 100%; font-size: 16px; background:#D9D9D9;">
            <thead class="table-headers">
                <tr>
                    <th style="width: 20%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Title</th>
                    <th style="width: 10%; padding: 15px; 15px; text-align: left; border-bottom: 1px solid white; border-left: 1px solid white;">Date Modified</th>
                    <th style="width: 2%; padding: 15px; 15px; text-align: center; border-bottom: 1px solid white; border-left: 1px solid white;">Reviewed</th>
                </tr>
            </thead>
            <tbody id="documentsAttachedTable" style = "word-break: break-word;">
                {{#each latestversioncontracts}}
                <tr id="{{_id}}" class="latest-version-contract-row">
                    <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{filename}}</td>
                    <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{formatdate uploadDate}}</td>
                    <td class="text-center" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">
                        <input type="checkbox" class="is-reviewed form-check-input" value="{{isreviewed}}" {{#if isreviewed}}checked="checked"{{/if}}>
                    </td>
                </tr>
                {{/each}}
                {{#each referencedocuments}}
                <tr id="{{_id}}" class="reference-document-row">
                    <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{filename}}</td>
                    <td class="text-left" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">{{formatdate uploadDate}}</td>
                    <td class="text-center" style="padding: 15px 15px; border-bottom: 1px solid white; border-left: 1px solid white;">
                        <input type="checkbox" class="is-reviewed form-check-input" value="{{isreviewed}}" {{#if isreviewed}}checked="checked"{{/if}}>
                    </td>
                </tr>
                {{/each}}
            </tbody>
            <tfooter>
                <tr>
                    <td></td>
                    <td class="text-center"><div id="allReviewed" hidden>All Reviewed</div></td>
                    <td></td>
                </tr>
            </tfooter>
        </table>
        {{>requestbuttons}}
    </div>

    <button class="" data-bs-toggle="modal" data-bs-target="#uploadRepositoryFile">Upload Signed Contract</button>
    <div class="container">
        <div class="d-grid gap-2">
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#uploadContractModal">Upload Contract (Temporary Feature)</button>
        </div>
    </div>

    <!-- Upload Contract Modal -->
    <div class="modal fade" id="uploadContractModal" tabindex="-1" aria-labelledby="uploadContractModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Upload Contract Temporary</h5>
                </div>
                <form action="/requestdocuments/uploadrequestdocs" method="POST" enctype="multipart/form-data">
                    <input type="hidden" name="contractRequestId" value="{{contractrequest._id}}">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="contractFiles" class="modal-text form-label">Contract Files Upload</label><br>
                            <input type="file" name="contractFiles" id="contractFiles" class="form-control" multiple required><br><br>
                        </div>
                        <div class="mb-3">
                            <label for="refDocFiles" class="modal-text form-label">Reference Documents Files Upload</label><br>
                            <input type="file" name="refDocFiles" id="refDocFiles" class="form-control" multiple><br><br>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="close-btn" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="upload-btn">Upload</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    
</div>
