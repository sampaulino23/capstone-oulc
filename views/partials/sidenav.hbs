    <a href="/logout" id = "sidenav-logout">Log Out</a>
    {{/compare}}

</div>

<script>
    /* Set the width of the side navigation to 250px */
    function openNav() {
        document.getElementById("mySidenav").style.width = "max-content";
    }

    /* Set the width of the side navigation to 0 */
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
    
    document.onclick = function (e) {
    if (e.target.id !== 'mySidenav' && e.target.id !== 'burger-menu') {
        if (e.target.offsetParent && e.target.offsetParent.id !== 'mySidenav')
            closeNav()
    }
}
</script>