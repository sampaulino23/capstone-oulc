    {{#compare user_role "==" "Requester"}}
    <a href="/requester"><img src="/img/home.png" style="width:45px; padding:0px; margin-right: 15px;"/>Home</a>
    <a href="/requester/contractrequests"><img src="/img/approval_requests_logo.png" style="width:45px; padding:0px; margin-right: 15px;"/>Approval Requests</a>
    <a href="/requester/templates"><img src="/img/contract_templates_logo.png" style="width:45px; padding:0px; margin-right: 15px;"/>Contract Templates</a>
    <a href="/requester/repository"><img src="/img/docu_repository_logo.jpg" style="width:45px; padding:0px; margin-right: 15px;"/>Document Repository</a>
