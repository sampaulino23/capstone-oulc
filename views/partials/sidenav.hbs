    <a href="/staff/repository"><img src="/img/docu_repository_logo.jpg" style="width:45px; padding:0px; margin-right: 15px;"/>Document Repository</a>
    <a href="/logout" id = "sidenav-logout">Log Out</a>
    {{/compare}}

    {{#compare user_role "==" "Attorney"}}
    <a href="/attorney"><img src="/img/dashboard_logo.png" style="width:45px; padding:0px; margin-right: 15px;"/>Dashboard</a>
    <a href="/attorney/contractrequests"><img src="/img/approval_requests_logo.png" style="width:45px; padding:0px; margin-right: 15px;"/>Approval Requests</a>
    <a href="/attorney/templates"><img src="/img/contract_templates_logo.png" style="width:45px; padding:0px; margin-right: 15px;"/>Contract Templates</a>
    <a href="/attorney/repository"><img src="/img/docu_repository_logo.jpg" style="width:45px; padding:0px; margin-right: 15px;"/>Document Repository</a>
