<div id = "discussion-div">
    <div class = "discussion-header">Discussion Thread:</div>
    <br>
    <ul id="messages">Sample</ul>
    <form id="form" action="">
      <input id="input" autocomplete="off" placeholder = "Type message here..." /><button class = "send-btn">Send</button>
    </form>

</div>

