<style>
    .tab-pane {
        margin: 0;
        padding-bottom: 3rem;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }

    #form {
        background: #FFFFFF;
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        padding: 0.25rem;
        position: sticky;
        bottom: 0;
        display: flex;
        height: 54px;
        width: 100%;
        box-sizing: border-box;
    }

    #form-container {
        margin: 0px;
    }

    #inputmessage {
        border: none;
        padding: 0 1rem;
        flex-grow: 1;
        border-radius: 2rem;
        margin: 0.25rem;
    }

    #inputmessage:focus {
        outline: none;
    }

    .send-btn {
        background: #0C8039;
        border: none;
        padding: 0 1rem;
        margin: 0.25rem;
        border-radius: 3px;
        outline: none;
        color: #fff;
    }

    .send-btn:hover {
        background: #00713D;
    }

    #messages {
        list-style-type: none;
        float: right;
        width: 80%;
        min-height: 100px;
        background: rgba(12, 128, 57, 0.6);
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        padding: 10px 15px;
        margin-bottom: 20px;
    }

    #messages > li {
        padding: 0.5rem 1rem;
    
    }

    #messages > li:nth-child(odd) {
        background: #efefef;
    }

    #message-box {
    width: 80%;
    min-height: 100px;
    background: rgba(12, 128, 57, 0.6);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    padding: 10px 15px;
    margin-bottom: 20px;
    }

</style>

<script src = "/socket.io/socket.io.js"></script>

<script>
    $(document).ready( () => {
        var socket = io(); 
        
        $('.send-btn').click(function () {   
            //event.preventDefault();
            var message = document.getElementById("inputmessage").value;
            var conversationid = document.getElementById("conversationid").value;
            var username = document.getElementById("username").value;
            //addMessage(username, message);

            socket.emit("chat-message", {
                username: username,
                message: message
            });
            document.getElementById("inputmessage").value = "";

            $.ajax({
                    url: "/sendmessage",
                    method: "GET",
                   contentType: "application/json",
                    data: {conversationid: conversationid, message: message},
                    success: function() {
                        console.log('SUCCESS');
                   },
                    error: function(err) {
                        console.log(err);
                    }
            });

            });

            socket.off("chat-message").on("chat-message", function(data) {
                addMessage(data.username, data.message);
            });

    });

    function addMessage(username, message) {
        var ul = document.createElement("ul");
        var messagebox = document.getElementById("messagebox");
        ul.id = 'messages';
        ul.innerHTML = username + " : " + message;
        messagebox.appendChild(ul);
        window.scrollTo(0, document.body.scrollHeight);
    }
</script>

<div id = "discussion-div">
    <!--<div>Chat Members: {{conversation.members}}</div>-->
    <div class = "discussion-header">Discussion Thread:</div>
    {{#each messages}}
    <div>
        <ul id="messages">
            <div id ="discussion-details-div">
                <div class = "profile-pic">
                    <div id = "disc-pic-inner{{@index}}" class = "disc-pic-inner"></div>
                </div>
                <div id = "author-date-div">
                    <div class = "discussion-author" id = "discussion-author{{@index}}">
                        {{sender}}
                    </div>
                    <div class = "discussion-date">
                        {{formatfeedbackdate date}}
                    </div>
                </div>
            </div>
            <div class = "content">
                {{content}}
            </div>
        </ul>
    </div>
        
    {{/each}}
    <div id="messagebox"></div>
    <div id="form" >
        <input id="inputmessage" autocomplete="off" placeholder = "Type message here..." />
        <button class="send-btn" type="submit">Send</button>
    </div>

</div>

